{
  "name": "mini-toolbox",
  "version": "1.0.0",
  "description": "轻量化插件桌面工具箱",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "start:quiet": "electron . --no-console",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "desktop",
    "toolbox",
    "plugins"
  ],
  "author": "MiniToolbox Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "fs-extra": "^11.0.0",
    "archiver": "^6.0.0",
    "yauzl": "^2.10.0",
    "form-data": "^4.0.0"
  },
  "build": {
    "appId": "com.minitoolbox.app",
    "productName": "MiniToolbox",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "plugins/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
